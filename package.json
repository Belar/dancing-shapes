{
  "name": "dancing-shapes",
  "version": "1.0.0",
  "description": "CSS-only, minimalist loading animations",
  "scripts": {
    "dev:sass": "node-sass ./sass/dancing-shapes.scss ./example/css/dancing-shapes.css && node-sass ./sass/dancing-shapes.scss ./example/css/dancing-shapes.css  -w ./sass",
    "dev": "npm run dev:sass | browser-sync start --server './example' --files './example'",
    "build": "node-sass ./sass/dancing-shapes.scss ./dist/css/dancing-shapes.min.css --output-style compressed && node-sass ./sass/loaders/ --output ./dist/css/ --output-style compressed",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Belar",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Belar/dancing-shapes"
  },
  "bugs": {
    "url": "https://github.com/Belar/dancing-shapes/issues"
  },
  "keywords": [
    "loaders",
    "css-animation",
    "css"
  ],
  "devDependencies": {
    "browser-sync": "^2.18.7",
    "node-sass": "^4.5.0"
  }
}
